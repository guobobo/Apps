<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="@dimen/y10">
     <TextView
         android:layout_width="match_parent"
         android:layout_height="@dimen/y3"
         android:background="#f4f4f4"
         android:layout_centerInParent="true"
         />
 </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#fff">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           >

            <ImageView
                android:id="@+id/broadcast_r_itemb_img1"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:src="@mipmap/ic_launcher"
                android:layout_alignBottom="@+id/culture_r_itemb_img1"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/broadcast_r_itemb_tv3"
                android:background="@drawable/lpanda_bottom_gra"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="75dp"
                android:textSize="12sp"
                android:textColor="#fff"
                android:text="6544231321"
                android:gravity="center"
                android:layout_marginLeft="@dimen/y20"/>


            <ImageView
                android:id="@+id/culture_r_itemb_img1"
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/y30"
                android:src="@drawable/play"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="@dimen/y20"/>


        </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/broadcast_r_itemb_tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:textColor="#000"
                android:textSize="15sp"
                android:text="465465432132136"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/broadcast_r_itemb_tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="123132132132"
            />




    </LinearLayout>
    </LinearLayout>

</LinearLayout>
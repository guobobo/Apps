<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/live_image"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:src="@drawable/_no_img"/>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x40"
        android:text="[正在直播]"
        android:textColor="@color/colorBlank"
        android:textSize="12sp"
        android:gravity="bottom"
        android:paddingLeft="@dimen/x30"
        />
    <TextView
        android:id="@+id/live_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:text=""
        android:textColor="@color/colorBlank"
        android:textSize="12sp"
        android:gravity="bottom"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/y4"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介"
            android:layout_marginLeft="@dimen/x30"
            android:textSize="10sp"
            android:layout_gravity="center"
            />
        <CheckBox
            android:id="@+id/live_checkbox"
            android:layout_width="@dimen/x35"
            android:layout_height="@dimen/y60"
            android:button="@null"
            android:background="@drawable/liveon_image"
            android:checked="false"
            android:layout_marginLeft="@dimen/x260"
            android:layout_gravity="center_vertical"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLightGray"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1000dp"
            android:orientation="vertical"
            >
            <LinearLayout
                android:id="@+id/live_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/live_brief"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="10sp"
                    android:textColor="@color/colorBlank"
                    android:paddingTop="@dimen/x30"
                    android:paddingLeft="@dimen/x30"
                    android:paddingRight="@dimen/x30"
                    android:paddingBottom="@dimen/x20"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorLightGray"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <RadioButton
                    android:id="@+id/duo"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:text="多视角直播"
                    android:gravity="center"
                    android:button="@null"

                    android:textColor="@color/colorBlank"
                    />
                <RadioButton
                    android:id="@+id/bian"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:text="边看边聊"
                    android:gravity="center"
                    android:button="@null"
                    android:textColor="@color/colorBlank"
                    />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/live_recy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y1100"
                android:padding="@dimen/x20"
                >
            </android.support.v7.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
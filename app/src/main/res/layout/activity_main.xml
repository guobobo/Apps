<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorBlue"
        >
        <ImageView
            android:id="@+id/tab_image"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/panda_sign"
            />

        <TextView
            android:id="@+id/tab_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="熊猫直播"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/tab_image1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/hudong_sign"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:visibility="visible"
            />

        <ImageView
            android:id="@+id/tab_user"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/person_sign"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:background="@color/colorLLightGray"/>

    <com.example.iu.myapplication.customize.CustomViewPager
        android:id="@+id/main_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
    </com.example.iu.myapplication.customize.CustomViewPager>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorLLightGray"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:textColor="@color/colorBlank"
        >
        <RadioButton
            android:id="@+id/main_home"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:button="@null"
            android:gravity="center_horizontal|bottom"
            android:background="@mipmap/ic_launcher"
            android:checked="true"
            android:text="@string/home"
            />
        <RadioButton
            android:id="@+id/main_Pandalive"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:button="@null"
            android:gravity="center_horizontal|bottom"
            android:background="@mipmap/ic_launcher"
            android:text="@string/pandalive"
            />
        <RadioButton
            android:id="@+id/main_Rollingvideo"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:button="@null"
            android:gravity="center_horizontal|bottom"
            android:background="@mipmap/ic_launcher"
            android:text="@string/pandavideo"
            />
        <RadioButton
            android:id="@+id/main_Pandabroadcast"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:button="@null"
            android:gravity="center_horizontal|bottom"
            android:background="@mipmap/ic_launcher"
            android:text="@string/pandabroadcast"
            />

        <RadioButton
            android:id="@+id/main_liveCN"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@mipmap/ic_launcher"
            android:button="@null"
            android:gravity="center_horizontal|bottom"
            android:text="@string/livecn" />
    </RadioGroup>
</LinearLayout>

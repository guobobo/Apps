<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_culture_sp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
        android:id="@+id/culture_jc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/_no_img">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <ImageView
                android:id="@+id/culture_img1"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/y50"
                android:src="@drawable/play_fullsrcee_share"
                android:layout_alignParentRight="true"
                />
            <ImageView
                android:id="@+id/culture_img2"
                android:layout_width="@dimen/x50"
                android:layout_height="@dimen/y50"
                android:src="@drawable/play_fullsrcee_collect"
                android:layout_toLeftOf="@+id/culture_img1"
                />

            <TextView
                android:id="@+id/culture_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#fff"
                android:text="1321"
                android:layout_centerInParent="true"/>



        </RelativeLayout>



    </fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard>
</LinearLayout>
